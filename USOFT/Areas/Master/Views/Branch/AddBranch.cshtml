@model IEnumerable<USOFT.Models.Branch>
@{
    bool condition;
}
&nbsp;
@using (Html.BeginForm(FormMethod.Post))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h5 class="text-white">New Branch</h5>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-8">
                            <form role="form">
                                <div class="form-group">
                                    @Html.Label("Branch ID", new { @class = "col-md-4 control-label" })
                                    <div class="col-lg-5">
                                        @Html.TextBox("SearchValue", null, new { @class = "form-control input-sm" })
                                    </div>

                                </div>
                                <div class="form-group">
                                    @Html.Label("Branch Code", new { @class = "col-md-4 control-label" })
                                    <div class="col-lg-5">
                                        @Html.TextBox("branchCode", null, new { @class = "form-control input-sm" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Branch Name", new { @class = "col-md-4 control-label" })
                                    <div class="col-lg-5">
                                        @Html.TextBox("branchName", null, new { @class = "form-control input-sm" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Branch Type", new { @class = "col-md-4 control-label" })
                                    <div class="col-lg-5">
                                       @Html.DropDownList("branchType", (SelectList)ViewBag.brType, "All", new { @class = "form-control input-sm" })
                                      
                                    </div>
                                </div>
                                    <div class="form-group" id="divParent" style="display:none">
                                    @Html.Label("Branch Parent", new { @class = "col-md-4 control-label" })
                                    <div class="col-lg-5">
                                        @Html.DropDownList("branchParent", (SelectList)ViewBag.brParent, "All", new { @class = "form-control input-sm" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Branch Address", new { @class = "col-md-4 control-label"})
                                    <div class="col-lg-5">
                                        @Html.TextArea("BranchAddress", null, new { @class = "form-control input-sm", @rows = 2 })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Branch Phone", new { @class = "col-md-4 control-label" })
                                    <div class="col-lg-5">
                                        @Html.TextBox("BranchPhone", "", new { @class = "form-control input-sm" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Active State", new { @class = "col-md-4 control-label" })
                                    <div class="col-lg-5">
                                        @Html.DropDownList("IsActive", (SelectList)ViewBag.active, "All", new { @class = "form-control input-sm" })
                                        @Html.Hidden((string)ViewBag.menuId)
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <button type="Submit" value="Proses" class="btn btn-default btn-sm" id="buttonSearch">
                                <i class="glyphicon glyphicon-floppy-save"></i> Process
                            </button>
                            <button type="Submit" value="Back" class="btn btn-default btn-sm" id="buttonCreate" name="buttonAdd" onclick="window.location.href='@Url.Action("Branch", "Branch", new { id = ViewBag.menuId })'">
                                <i class="glyphicon glyphicon-backward"></i> Back
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    $("#branchType").change(function () {
        var targID = $(this).val();
        if (targID == "STANDBY POINT") {
            $("#divParent").show();
        } else
            $("#divParent").hide();
        })
</script>