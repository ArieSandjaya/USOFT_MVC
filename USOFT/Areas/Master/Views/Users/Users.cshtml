@model IEnumerable<USOFT.DataAccess.spUsersList_Result>
@using GridMvc.Html
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
<link href="~/Content/jquery.jqGrid/ui.jqgrid.css" rel="stylesheet" />
<script src="~/Scripts/i18n/grid.locale-en.js"></script>
<script src="~/Scripts/jquery-1.9.1.min.js"></script>
<script src="~/Scripts/jquery-ui-1.10.4.min.js"></script>
@using System.Security

&nbsp;
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h5 class="text-white">Users</h5>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-8">
                        <form role="form">
                            <div class="form-group">
                                @Html.Label("Search By", new { @class = "col-md-2" })
                                <div class="col-lg-4">
                                    @Html.DropDownList("ParamField", (IEnumerable<SelectListItem>)ViewBag.menu, "All", new { @class = "form-control input-sm" })
                                </div>
                                <div class="col-lg-6">
                                    @Html.TextBox("inputText", null, new { @class = "form-control input-sm" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Branch", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.DropDownList("BranchId", (SelectList)ViewBag.br, "All", new { @class = "form-control input-sm" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Departement", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.DropDownList("DepartementCode", (SelectList)ViewBag.dpt, "All", new { @class = "form-control input-sm" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Privilege", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.DropDownList("PrivilegeCode", (SelectList)ViewBag.prev, "All", new { @class = "form-control input-sm" })
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <button type="Submit" value="Search" class="btn btn-default btn-sm" id="buttonSearch">
                    <i class="glyphicon glyphicon-search"></i> Search
                </button>
                @if ((ViewData["Privilege"] as List<USOFT.DataAccess.spGetUserInfo_Result>)[0].CanInsert != false)
                    {
                        <button type="Submit" value="Create" class="btn btn-default btn-sm" id="buttonCreate" onclick="window.location.href='@Url.Action("AddUsers", "Users", new { id = ViewBag.menuId })'">
                            <i class="glyphicon glyphicon-plus"></i> Create
                        </button>
                    }
            </div>
            <div class="panel-body">
                <div id="divTable">
                    <table id="grid"></table>
                    <div id="pager"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery.jqGrid.min.js"></script>
<script type="text/javascript">
    $(window).bind('resize', function () {
        jQuery("#grid").setGridWidth($('#divTable').width(), true);
    }).trigger('resize');

    $('#buttonSearch').click(function () {
    $("#grid").jqGrid({
        url: '@Url.Action("GetUserData","Users")',
        datatype: 'JSON',
        mtype: "POST",

        postData: {
            ParamField: function () {
                return $("#ParamField option:selected").val();
            },
            DepartementCode: (function () {
                return $("#DepartementCode option:selected").val();
            }),
            BranchId: (function () {
                return $("#BranchId option:selected").val();
            }),
            SearchValue: (function () {
                return $("#inputText ").val();
            }),
            PrivilegeCode: (function () {
                return $("#PrivilegeCode option:selected").val();
            })
        },
        colNames: ['UserId', 'User Name', 'NIK', 'Branch Name', 'Privililage', 'Is Active','Action'],
        colModel: [
            { key: true, Name: true, name: 'UserId', editable: true },
            { key: false, name: 'UserName', editable: true },
            { key: false, name: 'NIK', editable: true },
            { key: false, name: 'BranchName', editable: true },
            { key: false, name: 'PrivilegeName', editable: true ,width:300},
            { key: false, name: 'IsActive', editable: true, edittype: 'select',width:50, editoptions: { value: { 'A': 'Active', 'I': 'InActive' } } },
            {
                name: 'Edit', title: false,width:50,
                formatter: function (cellvalue, options, rowObject) {
                    return '<a href="/Master/Users/EditUsers?value=' + rowObject.UserId + '">' +
                        "Edit" + "</a>";
                }
            }
        ],
        pager: '#pager',
        rowNum: 10,
        rowList: [10, 20, 30, 40],
        height: '80%',
        width: '70%',
        viewrecords: true,
        caption: '',
        emptyrecords: 'No records to display',
        jsonReader: {
            root: "rows",
            page: "page",
            total: "total",
            records: "records",
            repeatitems: false,
            cell: "cell",
            id: "id",
            userdata: "userdata",
        },

        multiselect: false
    })
    $("#grid").trigger("reloadGrid", [{ page: 1 }]);
    });
    </script>