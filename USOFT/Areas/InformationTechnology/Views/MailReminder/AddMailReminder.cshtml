@{
    ViewBag.Title = "AddMailReminder";
}
@using (@Html.BeginForm(FormMethod.Post))
{
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">ADD MAIL REMINDER</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Search
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-8">
                            <form role="form">
                                <div class="form-group">
                                    @Html.Label("Reminder Id", new { @class = "col-md-2 control-label" })
                                    <div class="col-lg-10">
                                        @Html.Label("[Generated By System]", null, new { @class = "col-lg-10 control-label" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Subject", new { @class = "col-md-2 control-label" })
                                    <div class="col-lg-10">
                                        @Html.TextBox("pivchSubject", "", new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Body", new { @class = "col-md-2 control-label" })
                                    <div class="col-lg-10">
                                        @Html.TextArea("pivchBody", "", new { @class = "form-control", @style = "height : 150px" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Description", new { @class = "col-md-2 control-label" })
                                    <div class="col-lg-10">
                                        @Html.TextArea("pivchDescription", "", new { @class = "form-control", @style = "height : 100px" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Active State", new { @class = "col-md-2 control-label" })
                                    <div class="col-lg-10">
                                        @Html.DropDownList("IsActive", (IEnumerable<SelectListItem>)ViewBag.isactive, "All", new { @class = "form-control" })
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <input type="Submit" value="Proses" class="btn btn-default" id="buttonSearch" />
                            <input type="button" id="buttonCreate" value="Back" class="btn btn-default" onclick="window.location.href='@Url.Action("MailReminder", "MailReminder", new { id = ViewBag.menuId })'" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
